
<metainfo prefix="XYZ" filename="addrbook">

	<struct name="PhoneNumber">
		<field name="Type"    type="char" arraysize="10" />
		<field name="Primary" type="int32" />
		<field name="Content" type="*char" />
	</struct>

	<struct name="Email">
		<field name="Type"    type="char" arraysize="10" />
		<field name="Address" type="*char" />
		<field name="Nickname" type="*char" required="0" />
	</struct>

	<struct name="Buffer">
		<field name="Size" type="int32" />
		<field name="Buffer" type="*char" referto="Size" />
	</struct>

	<struct name="Contact">
		<field name="Name"   type="*char" />

		<field name="Image" type="Buffer" />

		<field name="EmailList"  type="*Email" referto="EmailCount" />
		<field name="EmailCount" type="int32" required="0" />

		<field name="PhoneCount" type="int32" />
		<field name="PhoneList" type="*PhoneNumber" referto="PhoneCount" />
	</struct>

</metainfo>

